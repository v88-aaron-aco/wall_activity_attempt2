<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Wall</title>
    </head>
    <body>
        <h1>Welcome back, <%= data.first_name %> <%= data.last_name %>!</h1>
        <a href="/logout">Logout</a>
        <!-- Create Message Start  -->
        <form action="/createMessage" method="POST">
            <textarea
                name="message"
                id="message"
                cols="30"
                rows="10"
                placeholder="Write a message."
            ></textarea>
            <input type="submit" value="Post" />
        </form>
        <!-- Create Message End -->
        <!-- Messages -->
        <% for (let i = 0; i < messages.length; i++){%>
        <h2><%=messages[i].first_name%>, <%=messages[i].last_name%></h2>
        <p><%=messages[i].message%></p>
        <!-- Delete Message Start  -->
        <% if(data.id === messages[i].user_id){ %>
        <form action="/deleteMessage" method="post">
            <input
                type="hidden"
                name="message_id"
                value="<%=messages[i].id%>"
            />
            <input type="submit" value="Delete" />
        </form>
        <% } %>
        <!-- Delete Message End -->
        <!-- Create Comments Start  -->
        <form action="/createComment" method="POST">
            <textarea
                name="comment"
                id="comment"
                cols="30"
                rows="10"
                placeholder="Write a comment."
            ></textarea>
            <input type="submit" value="Post" />
        </form>
        <!-- Create Comments End -->

        <% } %>
    </body>
</html>
